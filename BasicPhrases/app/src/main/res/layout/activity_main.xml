<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.athaman.basicphrases.MainActivity">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="Hello"
        android:layout_column="0"
        android:layout_row="0"
        android:onClick="playPhrase"
        android:tag="hello"        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="Thank you"
        android:layout_column="1"
        android:layout_row="0"
        android:onClick="playPhrase"
        android:tag="thanks"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="Do you &#10;speak English?"
        android:layout_column="0"
        android:layout_row="1"
        android:onClick="playPhrase"
        android:tag="doyouspeakenglish"        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="my name is"
        android:layout_column="1"
        android:layout_row="1"
        android:onClick="playPhrase"
        android:tag="mynameis"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="Welcome"
        android:layout_column="0"
        android:layout_row="2"
        android:onClick="playPhrase"
        android:tag="welcome"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="please"
        android:layout_column="1"
        android:layout_row="2"
        android:onClick="playPhrase"
        android:tag="please"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="I live in..."
        android:layout_column="0"
        android:layout_row="3"
        android:onClick="playPhrase"
        android:tag="ilivein"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:text="I am from..."
        android:layout_column="1"
        android:layout_row="3"
        android:onClick="playPhrase"
        android:tag="iamfrom"/>


</GridLayout>
